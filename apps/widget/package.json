{
  "name": "@toppingxp/widget",
  "version": "1.0.0",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc && electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.toppingxp.widget",
    "productName": "ToppingXP",
    "electronVersion": "28.0.0",
    "win": {
      "target": ["portable"],
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "ToppingXP-Setup.exe"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ]
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "28.0.0",
    "electron-builder": "24.13.3",
    "typescript": "^5.3.3"
  }
}
